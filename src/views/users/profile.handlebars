<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/cropperjs/1.5.13/cropper.min.css">

<style>
    /* Estilos originais mantidos */
    .form-control-modern, .form-select-modern { border: 1px solid #e0e6ed; border-radius: 10px; padding: 12px 15px; transition: all 0.3s ease; background-color: #f8f9fa; }
    .form-control-modern:focus, .form-select-modern:focus { border-color: #13315c; box-shadow: 0 0 0 0.25rem rgba(19, 49, 92, 0.1); background-color: #fff; outline: none; }
    .btn-update { background: #13315c; color: white; font-weight: bold; border-radius: 10px; padding: 12px; border: none; transition: 0.3s; }
    .btn-update:hover { background: #1e4d8c; transform: translateY(-2px); }
    .nav-pills .nav-link.active { background-color: #eef4ff !important; color: #13315c !important; border-left: 5px solid #f9ca24 !important; }

    /* Garante que a imagem caiba dentro do modal para você conseguir cortar */
    img {
        display: block;
        max-width: 100%;
    }

    /* Isso impede que a imagem fique gigante ou saia do modal */
    .img-container {
        max-height: 450px;
        width: 100%;
        text-align: center;
        background-color: #f7f7f7;
        overflow: hidden;
    }

    #imageToCrop {
        display: block;
        max-width: 100%; /* Essencial para o Cropper não bugar */
    }

    /* Garante que a visualização lateral seja circular */
    .preview-profile {
        width: 160px;
        height: 160px;
        border-radius: 50%;
        overflow: hidden;
        margin: 0 auto;
        border: 2px solid #ddd;
    }
</style>

<section class="pb-5" style="background: #f4f7f9; min-height: 100vh;">
    
    <form id="mainForm" action="/users/profile/edit" method="POST">
        <input type="hidden" name="croppedImage" id="croppedImage">

        <div class="position-relative" style="height: 250px; background: linear-gradient(45deg, #13315c, #0d6efd);">
            <div class="container position-relative h-100">
                <div class="position-absolute bottom-0 start-0 translate-middle-y ms-4 d-flex align-items-end" style="margin-bottom: -60px; z-index: 2;">
                    <div class="position-relative">
                        <div id="profilePreview" class="rounded-circle border border-4 border-white shadow-lg" 
                             style="width: 140px; height: 140px; background: #fff; overflow: hidden; display: flex; align-items: center; justify-content: center;">
                            {{#if user.profileImage}}
                                <img src="{{user.profileImage}}" id="currentAvatar" style="width: 100%; height: 100%; object-fit: cover;">
                            {{/if}}
                        </div>
                        <label for="fileInput" class="btn btn-warning btn-sm position-absolute bottom-0 end-0 rounded-circle shadow-sm" style="cursor: pointer;">
                            <i class="bi bi-camera-fill"></i>
                            <input type="file" id="fileInput" accept="image/*" style="display:none">
                        </label>
                    </div>
                    <div class="ms-3 mb-4 text-white d-none d-md-block">
                        <h3 class="fw-bold mb-0 shadow-sm">{{user.name}}</h3>
                        <p class="small opacity-90 text-uppercase"><i class="bi bi-briefcase-fill me-1"></i>{{user.profession}}</p>
                    </div>
                </div>
            </div>
        </div>

        <div class="container mt-5 pt-4">
            <div class="row g-4">
                <div class="col-lg-4 mt-5 mt-lg-4">
                    <div class="card shadow-sm p-3 mb-4 bg-white rounded-4 border-0">
                        <div class="nav flex-column nav-pills" id="v-pills-tab" role="tablist">
                            <button type="button" class="nav-link active text-start py-3" data-bs-toggle="pill" data-bs-target="#tab-dados">
                                <i class="bi bi-person-vcard me-2"></i> Meus Dados
                            </button>
                            <button type="button" class="nav-link text-start py-3" data-bs-toggle="pill" data-bs-target="#tab-seguranca">
                                <i class="bi bi-lock me-2"></i> Segurança e Senha
                            </button>
                        </div>
                    </div>
                </div>

                <div class="col-lg-8">

                    <div class="tab-content">
                        <div class="tab-pane fade show active" id="tab-dados" role="tabpanel">
                            <div class="card p-4 shadow-sm bg-white rounded-4 border-0">
                                <h4 class="fw-bold mb-4 text-dark"><i class="bi bi-pencil-square me-2"></i>Editar Informações</h4>
                                <div class="mb-3">
                                    <label class="form-label fw-bold small text-muted">NOME COMPLETO</label>
                                    <input type="text" name="name" class="form-control form-control-modern" value="{{user.name}}" required>
                                </div>
                                <div class="mb-3">
                                    <label class="form-label fw-bold small text-muted">BIO / DESCRIÇÃO</label>
                                    <textarea name="bio" class="form-control form-control-modern" rows="3">{{user.bio}}</textarea>
                                </div>
                                <div class="mb-4">
                                    <label class="form-label fw-bold small text-muted">PROFISSÃO / PERFIL</label>
                                    <select name="profession" class="form-select form-select-modern w-100">
                                        <option value="{{user.profession}}" selected>{{user.profession}} (Atual)</option>
                                        <option value="Cidadão">Cidadão</option>
                                        <option value="Estudante">Estudante</option>
                                        <option value="Servidor Público">Servidor Público</option>
                                        <option value="Comerciante">Comerciante</option>
                                    </select>
                                </div>
                                <button type="submit" class="btn btn-update w-100 shadow-sm">SALVAR ALTERAÇÕES</button>
                            </div>
                        </div>

                        <div class="tab-pane fade" id="tab-seguranca" role="tabpanel">
                            <div class="card p-4 shadow-sm bg-white rounded-4 border-0">
                                <h4 class="fw-bold mb-4 text-dark"><i class="bi bi-shield-lock me-2"></i>Alterar Senha</h4>
                                
                                <div class="mb-3">
                                    <label class="form-label fw-bold small text-muted">SENHA ATUAL</label>
                                    <input type="password" name="oldPassword" class="form-control form-control-modern" placeholder="••••••••">
                                </div>
                                <hr class="my-4 opacity-25">
                                <div class="mb-3">
                                    <label class="form-label fw-bold small text-muted">NOVA SENHA</label>
                                    <input type="password" name="newPassword" class="form-control form-control-modern" placeholder="Mínimo 4 caracteres">
                                </div>
                                <div class="mb-4">
                                    <label class="form-label fw-bold small text-muted">CONFIRMAR NOVA SENHA</label>
                                    <input type="password" name="newPassword2" class="form-control form-control-modern" placeholder="Repita a nova senha">
                                </div>
                                
                                <button type="submit" formaction="/users/profile/change-password" class="btn btn-primary w-100 py-3 fw-bold rounded-3">ATUALIZAR SENHA</button>
                            </div>
                        </div>
                    </div> 
                </div>
            </div>
        </div>
    </form>
</section>

<div class="modal fade" id="modalCrop" tabindex="-1" role="dialog" aria-labelledby="modalLabel" aria-hidden="true">
  <div class="modal-dialog modal-lg" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="modalLabel">Ajustar Foto de Perfil</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body">
        <div class="img-container">
            <div class="row">
                <div class="col-md-8">
                    <img id="imageToCrop" src="">
                </div>
                <div class="col-md-4 text-center">
                    <p class="small fw-bold">VISUALIZAÇÃO</p>
                    <div class="preview-profile shadow-sm"></div> 
                </div>
            </div>
        </div>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancelar</button>
        <button type="button" class="btn btn-primary" id="cropBtn">Cortar e Salvar</button>
      </div>
    </div>
  </div>
</div>

<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/cropperjs/1.5.13/cropper.min.js"></script>

<script>
    // Usamos o seletor do jQuery para garantir que o DOM está pronto
    $(document).ready(function() {
        
        // 1. Variáveis Globais
        var modalElement = document.getElementById('modalCrop');
        var image = document.getElementById('imageToCrop');
        var cropper;
        
        // 2. Tenta pegar a instância do Bootstrap (ou cria uma nova)
        var bsModal = new bootstrap.Modal(modalElement);

        // 3. Quando seleciona o arquivo
        $('#fileInput').on('change', function(e) {
            var files = e.target.files;
            if (files && files.length > 0) {
                var reader = new FileReader();
                reader.onload = function (event) {
                    image.src = event.target.result;
                    bsModal.show(); // Abre o modal
                };
                reader.readAsDataURL(files[0]);
            }
        });

        // 4. Quando o modal terminar de abrir, inicia o Cropper
        modalElement.addEventListener('shown.bs.modal', function () {
            cropper = new Cropper(image, {
            aspectRatio: 1,
            viewMode: 1, // Não permite que a caixa de corte saia da imagem
            autoCropArea: 1, // Seleciona o máximo da imagem ao abrir
            responsive: true,
            restore: false,
            ready: function () {
                // Isso força o Cropper a se ajustar ao tamanho real da imagem no modal
                cropper.setCropBoxData({ width: 200, height: 200 });
            }
        });

        // ... no clique do botão salvar ...
        $('#cropBtn').on('click', function() {
            // Pegamos o canvas com alta qualidade
            var canvas = cropper.getCroppedCanvas({
                width: 400,
                height: 400,
                imageSmoothingEnabled: true,
                imageSmoothingQuality: 'high',
            });

            // Converte para Base64
            var base64data = canvas.toDataURL('image/png');
            
            // 1. Atualiza o valor no input hidden que vai pro banco
            $('#croppedImage').val(base64data);
            
            // 2. Troca a imagem na tela na hora (feedback visual)
            $('#currentAvatar').attr('src', base64data);
            
            // 3. Fecha o modal e envia o form
            bsModal.hide();
            
            // IMPORTANTE: Pequeno delay para garantir que o input recebeu o texto gigante do base64
            setTimeout(function(){
                $('#mainForm').submit();
            }, 500);
        });
    });
</script>