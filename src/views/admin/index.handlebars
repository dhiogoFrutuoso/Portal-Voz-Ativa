<style>
    @import url('https://fonts.googleapis.com/css2?family=Poppins:wght@400;600;800&family=Nunito:wght@400;700&display=swap');

    :root {
        --primary-red: #d90429;
        --dark-red: #800f2f;
        --soft-red: #fff5f5;
        --accent-red: #ef233c;
        --text-dark: #2b2d42;
        --text-muted: #8d99ae;
        --white: #ffffff;
        --transition: all 0.4s cubic-bezier(0.165, 0.84, 0.44, 1);
    }

    .btn-light-effect { 
        position: relative; 
        overflow: hidden; 
        z-index: 1; 
        transition: all 0.3s ease; 
    }

    .btn-light-effect span { 
        position: relative; 
        z-index: 2; 
    }

    .btn-light-effect::before {
        content: ""; 
        position: absolute; 
        top: 0; 
        left: -300%; /* Começa bem fora da tela */
        width: 300%; 
        height: 300%;
        /* O segredo: as paradas de cor (0%, 45%, 50%, 55%, 100%) criam uma linha fina */
        background: linear-gradient(
            120deg, 
            transparent 40%, 
            rgba(255, 255, 255, 0.315) 50%, 
            transparent 60%
        );
        transition: all 3s cubic-bezier(0.19, 1, 0.22, 1); /* Transição mais elegante */
        z-index: 1;
    }

    .btn-light-effect:hover::before { 
        left: 150%; /* Atravessa a tela inteira */
    }

    body { font-family: 'Nunito', sans-serif; color: var(--text-dark); background-color: #fdfdfd; }
    h1, h2, h3, h4, .poppins { font-family: 'Poppins', sans-serif; }

    /* Otimização de utilitários */
    .rounded-huge { border-radius: 3rem !important; }
    .btn-round { border-radius: 50px; padding: 12px 35px; font-weight: 700; transition: var(--transition); border: none; }
    
    /* Hero Section Renovada */
    .hero-gradient {
        background: radial-gradient(circle at top right, #fff5f5, var(--white));
        padding: 100px 0;
        border-radius: 0 0 80px 80px;
        border-bottom: 6px solid var(--primary-red);
    }
    /* Cards Flutuantes Otimizados */
    .floating-card {
        transition: var(--transition);
        border: 1px solid rgba(0,0,0,0.05) !important;
        background: var(--white);
        box-shadow: 0 10px 30px rgba(0,0,0,0.05);
    }
    .floating-card:hover {
        transform: translateY(-10px);
        box-shadow: 0 20px 40px rgba(217, 4, 41, 0.15) !important;
    }

    /* Seção de Citação (Tema Vermelho) */
    .quote-section {
        position: relative;
        padding: 120px 0;
        background: linear-gradient(135deg, var(--dark-red), var(--primary-red));
        border-radius: 60px;
        margin: 60px 20px;
        overflow: hidden;
        border: none;
    }

    .quote-section::after {
        content: "";
        position: absolute;
        top: 0; left: 0; width: 100%; height: 100%;
        background: url('https://www.transparenttextures.com/patterns/carbon-fibre.png');
        opacity: 0.1;
    }

    .divider-glow {
        height: 3px;
        width: 80px;
        background: linear-gradient(90deg, transparent, #fff, transparent);
        margin: 30px auto;
    }

    .badge-reflexao {
        background: rgba(255, 255, 255, 0.15);
        backdrop-filter: blur(10px);
        padding: 8px 20px;
        border-radius: 50px;
        font-size: 0.75rem;
        border: 1px solid rgba(255, 255, 255, 0.3);
        color: white;
    }

    .divider-custom {
        height: 5px;
        width: 70px;
        background: var(--primary-red);
        border-radius: 10px;
        margin: 20px auto;
    }
</style>

