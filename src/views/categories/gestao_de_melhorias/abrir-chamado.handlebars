<section class="py-5 bg-light" style="min-height: 90vh;">
    <div class="container px-4">
        <div class="row justify-content-center">
            <div class="col-lg-8 col-xl-7">
                
                <div class="card shadow-sm border-0 rounded-4 overflow-hidden">
                    <div class="card-header p-4 border-0 text-center" style="background-color: #13315c;">
                        <h3 class="text-white fw-bold mb-0">Novo Chamado de Melhoria</h3>
                        <p class="text-white-50 mb-0 small text-uppercase tracking-wider">Cariús mais forte com a sua participação</p>
                    </div>
                    
                    <div class="card-body p-4 p-md-5 bg-white">
                        <form id="mainForm" action="/categories/gestao_de_melhorias/abrir-chamado" method="POST">
                            
                            <div class="mb-4">
                                <label class="form-label fw-bold text-secondary small text-uppercase">O que precisa de atenção?</label>
                                <input type="text" name="titulo" class="form-control custom-input" placeholder="Ex: Reparo de asfalto ou iluminação" required>
                            </div>

                            <div class="mb-4">
                                <label class="form-label fw-bold text-secondary small text-uppercase">Localização no Mapa (Grátis)</label>
                                
                                <div id="map" class="rounded-4 mb-3 shadow-sm border" style="height: 320px; width: 100%; z-index: 1;"></div>
                                
                                <div class="input-group">
                                    <span class="input-group-text border-0 bg-light text-danger"><i class="bi bi-geo-alt-fill"></i></span>
                                    <input type="text" id="addressInput" name="localizacao" class="form-control custom-input border-start-0" placeholder="Clique no mapa para marcar o local" required>
                                </div>
                                <small class="text-muted mt-1 d-block"><i class="bi bi-info-circle me-1"></i> Clique no mapa para posicionar o marcador azul.</small>

                                <input type="hidden" id="latInput" name="latitude">
                                <input type="hidden" id="lngInput" name="longitude">
                            </div>

                            <div class="mb-4">
                                <label class="form-label fw-bold text-secondary small text-uppercase">Anexar Evidências (Máx. 3)</label>
                                <div class="upload-area rounded-4 p-4 text-center border-dashed position-relative bg-light" id="drop-zone">
                                    <input type="file" id="imgInput" accept="image/*" class="d-none" multiple>
                                    
                                    <div id="placeholder-upload" class="cursor-pointer" onclick="document.getElementById('imgInput').click()">
                                        <i class="bi bi-cloud-arrow-up-fill fs-2 text-primary"></i>
                                        <p class="mb-0 small fw-bold text-muted">Clique para adicionar fotos</p>
                                        <span class="text-black-50" style="font-size: 0.7rem;">Você pode selecionar uma por uma (Limite: 3)</span>
                                    </div>

                                    <div id="preview-grid" class="row g-2 mt-2 d-none"></div>
                                </div>
                                <div id="cloudinaryUrlsContainer"></div> 
                            </div>

                            <div class="mb-5">
                                <label class="form-label fw-bold text-secondary small text-uppercase">Descrição Detalhada</label>
                                <textarea name="descricao" class="form-control custom-input" rows="4" placeholder="Descreva os detalhes da solicitação..." required></textarea>
                            </div>

                            <div class="d-grid gap-3">
                                <button type="submit" id="submitBtn" class="btn btn-primary btn-lg rounded-pill fw-bold shadow-sm py-3 transition-base">
                                    CONFIRMAR REGISTRO
                                </button>
                                <a href="/categories/gestao_de_melhorias/hub" class="btn btn-link text-decoration-none text-muted fw-bold">
                                    CANCELAR E VOLTAR
                                </a>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<link rel="stylesheet" href="https://unpkg.com/leaflet@1.9.4/dist/leaflet.css" />
<script src="https://unpkg.com/leaflet@1.9.4/dist/leaflet.js"></script>
<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>

<script>
    $(document).ready(function() {
        // --- CONFIGURAÇÕES CLOUDINARY ---
        const cloudName = 'dnh7vok3r';
        const unsignedPreset = 'Portal-Voz-Ativa';
        let selectedFiles = [];

        // --- LÓGICA DO MAPA ---
        const latInicial = -6.5372;
        const lngInicial = -39.4958;

        const map = L.map('map').setView([latInicial, lngInicial], 15);
        L.tileLayer('https://{s}.tile.openstreetmap.org/{z}/{x}/{y}.png', {
            attribution: '© OpenStreetMap'
        }).addTo(map);

        let marker = L.marker([latInicial, lngInicial], {draggable: true}).addTo(map);

        function updateFields(lat, lng) {
            document.getElementById('latInput').value = lat.toFixed(6);
            document.getElementById('lngInput').value = lng.toFixed(6);
            
            fetch(`https://nominatim.openstreetmap.org/reverse?format=jsonv2&lat=${lat}&lon=${lng}`)
                .then(res => res.json())
                .then(data => {
                    if(data.display_name) {
                        document.getElementById('addressInput').value = data.display_name;
                    }
                });
        }

        map.on('click', e => {
            marker.setLatLng(e.latlng);
            updateFields(e.latlng.lat, e.latlng.lng);
        });

        marker.on('dragend', () => {
            const pos = marker.getLatLng();
            updateFields(pos.lat, pos.lng);
        });

        // --- LÓGICA DE PREVIEW DE IMAGENS ---
        $('#imgInput').on('change', function(e) {
            const files = Array.from(e.target.files);
            files.forEach(file => {
                if (selectedFiles.length < 3) {
                    selectedFiles.push(file);
                }
            });
            renderPreview();
        });

        window.removeFile = function(index) {
            selectedFiles.splice(index, 1);
            renderPreview();
        }

        function renderPreview() {
            const $previewGrid = $('#preview-grid');
            const $placeholder = $('#placeholder-upload');
            $previewGrid.empty();

            if (selectedFiles.length > 0) {
                $previewGrid.removeClass('d-none');
                $placeholder.toggleClass('d-none', selectedFiles.length >= 3);

                selectedFiles.forEach((file, index) => {
                    const reader = new FileReader();
                    reader.onload = function(e) {
                        const html = `
                            <div class="col-4 position-relative">
                                <div class="ratio ratio-1x1 shadow-sm rounded-3 overflow-hidden border">
                                    <img src="${e.target.result}" class="object-fit-cover w-100 h-100">
                                </div>
                                <button type="button" onclick="removeFile(${index})" 
                                        class="btn btn-danger btn-sm position-absolute top-0 start-100 translate-middle rounded-circle p-0" 
                                        style="width:22px; height:22px; z-index: 10; border: 2px solid white;">
                                    <i class="bi bi-x"></i>
                                </button>
                            </div>`;
                        $previewGrid.append(html);
                    }
                    reader.readAsDataURL(file);
                });
            } else {
                $previewGrid.addClass('d-none');
                $placeholder.removeClass('d-none');
            }
        }

        // --- LÓGICA DE SUBMIT COM CLOUDINARY ---
        $('#mainForm').on('submit', async function(e) {
            e.preventDefault();
            const btn = $('#submitBtn');
            const $urlsContainer = $('#cloudinaryUrlsContainer');
            
            btn.html('<span class="spinner-border spinner-border-sm me-2"></span> Processando...').prop('disabled', true);
            $urlsContainer.empty();

            try {
                if (selectedFiles.length > 0) {
                    for (let file of selectedFiles) {
                        const base64Data = await new Promise((resolve) => {
                            const reader = new FileReader();
                            reader.onload = (ev) => resolve(ev.target.result);
                            reader.readAsDataURL(file);
                        });

                        const formData = new FormData();
                        formData.append('file', base64Data);
                        formData.append('upload_preset', unsignedPreset);

                        const response = await $.ajax({
                            url: `https://api.cloudinary.com/v1_1/${cloudName}/upload`,
                            method: 'POST',
                            data: formData,
                            processData: false,
                            contentType: false
                        });

                        // Injeta como 'imagens[]' para o backend receber a array
                        $urlsContainer.append(`<input type="hidden" name="imagens[]" value="${response.secure_url}">`);
                    }
                }

                // Envio final
                this.submit();

            } catch (err) {
                console.error("Erro no Cloudinary:", err);
                alert("Erro ao enviar imagens. Verifique sua conexão.");
                btn.html('CONFIRMAR REGISTRO').prop('disabled', false);
            }
        });
    });
</script>

<style>
    .object-fit-cover { object-fit: cover; }
    .custom-input { background-color: #f8f9fa !important; border: 1px solid #dee2e6 !important; border-radius: 12px !important; padding: 12px 15px; }
    .custom-input:focus { border-color: #13315c !important; box-shadow: none !important; background-color: #fff !important; }
    .border-dashed { border: 2px dashed #cbd5e0; transition: 0.3s; }
    .btn-primary { background-color: #13315c; border: none; }
    .btn-primary:hover { background-color: #0d2342; transform: translateY(-2px); }
    .cursor-pointer { cursor: pointer; }
</style>